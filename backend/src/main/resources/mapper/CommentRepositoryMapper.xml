<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.pofo.pofoapiboot3.repository.CommentRepository">

    <select id="findPortfolioComments" resultType="Comment">
        SELECT
            id,
            member_id,
            portfolio_id,
            content,
            reg_date,
        FROM
            comment
        WHERE
            portfolio_id = #{portfolioId}
        ORDER BY
            reg_date DESC
    </select>

    <insert id="insert">
        INSERT INTO
            comment
        VALUES (
            #{memberId},
            #{portfolioId},
            #{content}
        )
    </insert>

    <delete id="delete">
        DELETE FROM
            comment
        WHERE
            id = #{id}
    </delete>
</mapper>