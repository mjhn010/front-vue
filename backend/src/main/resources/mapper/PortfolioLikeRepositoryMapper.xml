<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.pofo.pofoapiboot3.repository.PortfolioLikeRepository">

    <select id="count" resultType="Integer">
        SELECT
            COUNT(portfolio_id) AS count
        FROM
            portfolio_like
        WHERE
            portfolio_id = #{portfolioId}
    </select>

    <insert id="insert">
        INSERT INTO
            portfolio_like(portfolio_id, member_id)
        VALUES
            (#{portfolioId}, #{memberId})
    </insert>

    <delete id="delete">
        DELETE FROM
            portfolio_like
        WHERE
            portfolio_id = #{portfolioId}
        AND
            member_id = #{memberId}
    </delete>
</mapper>